{
  "name": "@adomne/express-ts-jest-boilerplate",
  "version": "1.0.0",
  "description": "ExpressJS App implemented with Typescript and Jest Testing Framework",
  "main": "./dist/app.js",
  "scripts": {
    "prebuild": "eslint --ext tslint.json",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch '*.ts' --watch '*.json' --exec 'ts-node' ./src/app.ts",
    "setup": "env $(cat .env | grep -v \"#\" | xargs) pm2 deploy ecosystem.config.js production setup",
    "test": "jest --detectOpenHandles -c ./jest.config.js",
    "test:coverage": "jest --coverage -c ./jest.config.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts && eslint tests/**/*.ts",
    "lint-fix": "eslint --fix 'src/**/*.ts' && eslint --fix 'tests/**/*.ts'",
    "pretty": "prettier --write 'src/**/*.ts' && prettier --write 'tests/**/*.ts'",
    "postinstall": "npx husky install",
    "prepare": "husky install",
    "precommit": "npm run lint-fix && npm run pretty",
    "prepush": "npm run lint"
  },

  "keywords": [
    "express",
    "node",
    "nodejs",
    "jest",
    "typescript",
    "node-typescript",
    "backend",
    "backend-api",
    "husky",
    "eslint",
    "prettier",
    "starter-kit"
  ],
  "author": "Adomne",
  "license": "Apache-2.0",
  "bin": "./bin/cli.js",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-actuator": "^1.8.0",
    "helmet": "^5.0.2",
    "mongoose": "^6.2.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-actuator": "^1.8.0",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  }
}
